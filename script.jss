body {
    margin: 0;
    padding: 0;
    background-color: black;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.eye-container {
    position: relative;
    width: 100px;
    height: 50px;
}

.eye {
    width: 100%;
    height: 100%;
}

.eye-white {
    fill: white;
}

.iris {
    fill: black;
    transition: transform 0.1s ease-out;
}
